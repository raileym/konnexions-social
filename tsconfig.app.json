{
  "compilerOptions": {

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@cknTypes/*": ["shared/cknTypes/*"],
      "@shared/*": ["shared/*"],
      "@context/*": ["src/context/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@mdxComponents/*": ["src/mdxComponents/*"],
      "@mdxPages/*": ["src/mdxPages/*"],
      "@PanelGenAIPro/*": ["src/components/PanelGenAIPro/*"],
      "@PanelGenAIProComponents/*": ["src/components/PanelGenAIPro/PanelGenAIProComponents/*"]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "composite": true,
    "declaration": true,
    "outDir": "./build",
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src",
    "shared",
    "src/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.js"
  ]
}