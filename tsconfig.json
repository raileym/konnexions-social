{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@cknTypes/*": ["shared/cknTypes/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "shared/**/*",
    "functions/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}
